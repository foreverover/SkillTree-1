<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:scaleX="3"
        android:scaleY="3"
        android:src="@drawable/pp" />

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        tools:context="zhu.skilltree.LoginActivity">

        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="#C378C8BE"
            android:gravity="center">

            <EditText
                android:id="@+id/username2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="username"
                android:inputType="textCapSentences|textEmailAddress"
                android:padding="20dp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/pass2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username2"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="Password"
                android:inputType="textCapSentences"
                android:padding="20dp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/pass3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass2"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="Confirm Pass"
                android:inputType="textCapSentences"
                android:padding="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass3"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:rotation="90"
                android:text="注册"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.25"
            android:background="#C37A80C1"
            android:gravity="center">


            <EditText
                android:id="@+id/username"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="Username"
                android:inputType="textCapSentences|textEmailAddress"
                android:padding="20dp" />


            <EditText
                android:id="@+id/pass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:hint="Password"
                android:inputType="textCapSentences"
                android:padding="20dp" />


            <TextView
                android:id="@+id/forget"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:inputType="textCapSentences"
                android:padding="20dp"
                android:text="忘记密码 ？" />


            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forget"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:scaleX="2"
                android:scaleY="2"
                android:text="登录"
                android:textColor="#000000"
                android:textSize="14sp" />


        </RelativeLayout>


    </LinearLayout>


</FrameLayout>